
class Guard{
	field int cx,cy;

	constructor Guard new(int ccx,int ccy){

	let cx=ccx;
	let cy=ccy;

	do draw();

	return this;
	}

	method void dispose(){
	do Memory.deAlloc(this);
	return;
	}

	method void draw(){
	do Screen.setColor(true);
	do Screen.drawCircle(cx,cy,7);
	return;
	}

	method void erase(){
	do Screen.setColor(false);
	do Screen.drawCircle(cx,cy,7);
	return;
	}

}